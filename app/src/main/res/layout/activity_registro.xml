<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.estacion.login.Registro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Registrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVRegistro"
            android:fontFamily="cursive"
            android:textSize="36sp"
            android:textAlignment="center" />

        <TextView
            android:text="Ingrese sus nombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVIngreseNombre"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ETNombres"
            android:textSize="18sp"
            android:hint="Pedro Juan" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11" />

        <TextView
            android:text="Ingrese sus apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVApellidos"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ETApellidos"
            android:hint="Garcia Pachon" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

        <TextView
            android:text="Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVUsuario"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ETUsuario"
            android:hint="TiTTo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11" />

        <TextView
            android:text="Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVContraseña"
            android:textSize="24sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ETContraseña"
            android:hint="********" />

        <Button
            android:text="Registrar"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:id="@+id/BRRegistrar"
            android:gravity="center" />

        <Button
            android:text="Cancelar"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:id="@+id/BRCancelar" />
    </LinearLayout>
</RelativeLayout>
